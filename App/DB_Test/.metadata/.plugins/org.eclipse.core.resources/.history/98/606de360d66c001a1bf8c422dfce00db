	@Override
	public void run() {
		while(true) {
			try {
				s = ss.accept();
				reader = new BufferedReader(
						new InputStreamReader(s.getInputStream()));
				writer = new BufferedWriter(
						new OutputStreamWriter(s.getOutputStream()));
				
				String msg = reader.readLine();
				String[] arrMsg = msg.split(":");
				
				if(arrMsg[0].equals("login")) {
					//for(int i =0;i<arrMsg.length;i++)
					//	System.out.println(arrMsg[i]);
					
					
					
					DBConnection db = new DBConnection();

					VO vo = null;
					vo = db.user_login(arrMsg[1], arrMsg[2]);	//id 와 pwd
					System.out.println("id : " + vo.getId() + " pwd : " + vo.getPwd());
					
					if(vo != null) {
						System.out.println("ok : id : " + vo.getId() + " pwd : " + vo.getPwd());
						writer.write("login_ok" + System.getProperty("line.separator"));
						writer.flush();
					}else {
						System.out.println("fail id : " + vo.getId() + " pwd : " + vo.getPwd());
						writer.write("login_fail" + System.getProperty("line.separator"));
						writer.flush();
					}
				}else {
					
				}
				
			} catch (Exception e) {
			}
		}
	}
	
	public static void main(String[] args) {
		new NetworkDB();
	}
}